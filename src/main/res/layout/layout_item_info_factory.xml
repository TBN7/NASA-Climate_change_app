<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_factory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="James is the director of a thermal power plant. His company burns petroleum, hard coal and natural gas to convert heat energy into electricity.Fuel combustion releases 0.86 pounds of CO2, CH4,HCFCs and ClFC-12 emissions per kWh."
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:background="@color/background3"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What actions can reduce greenhouse gas emissions?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/background3"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/a_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:background="@color/background3"
                android:textColor="@color/white"
                android:text="A. Replace fuel combustion with alternative energy such as geothermal, biofuel, etc."/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textSize="18sp"
                android:background="@color/background3"
                android:textColor="@color/white"
                android:text="B. Increase consumption of raw materials"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>